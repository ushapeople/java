	public static void view() {
		Scanner sc=new Scanner(System.in);
		System.out.println("select the view");
		System.out.println("1.mountain\n2.pool");
		int e=sc.nextInt();
		if(e==1) {
			System.out.println("you are mountaine view");
			System.out.println("number of persons");
			int p=sc.nextInt();
			if(p>0&&p<=4) {
				System.out.println(" press  to enter your booking room");
				char f=sc.next().charAt(0);
				if(f==1) {
					System.out.println("your room is booked");
					
				}
				else {
					System.out.println("room is canceled");
				}
			}
		}
	}
	public static void roomtype() {
		Scanner sc=new Scanner(System.in);
		System.out.println("select Ac/NonAc");
		System.out.println("1.Ac\n2.NonAc");
		int ac=sc.nextInt();
		if(ac==1) {
			System.out.println("you are booking Ac room");
			System.out.println(" Ac room price:5000");
		}
		else if(ac==2) {
			System.out.println("you are booking NonAc room");
			System.out.println(" Ac room price:3600");

			
		}
		
	}

public static void main(String args[])
